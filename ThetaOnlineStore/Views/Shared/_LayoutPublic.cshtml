<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ThetaOnlineStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/icheck-bootstrap/3.0.1/icheck-bootstrap.min.css" />
    <link href="https://github.com/fronteed/icheck/tree/1.x/skins" rel="stylesheet">

    <style>
        .ui-menu {
            width: 180px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-secondary border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ThetaOnlineStore</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    @*<partial name="_LoginPartial" />*@

                    @if (!string.IsNullOrEmpty(Context.Session.GetString("Role")))
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="#">Welcome,@Context.Session.GetString("DisplayName")</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/SystemUsers/Logout">Logout</a>
                            </li>
                        </ul>

                    }
                    else
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/SystemUsers/Create">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/SystemUsers/Login">Login</a>
                            </li>
                        </ul>

                    }



                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="row">
                <div class="col-md-3 btn btn-block bg-secondary">
                    <ul id="menu" class="bg-secondary">
                        <li class="ui-state-disabled"><div><a>Dashboard</a></div></li>

                        <li>
                            <div>Categories</div>
                            <ul>
                                <li><div><a href="/Categories/Create">Add New Category</a> </div></li>
                                <li><div><a href="/Categories/Index">Search Categories</a></div></li>
                            </ul>
                        </li>
                        <li>
                            <div>Products</div>
                            <ul>
                                <li><div><a href="/Products/Create">Add New Product</a></div></li>
                                <li><div><a href="/Products/Index">Search Products</a></div></li>
                            </ul>
                        </li>
                        <li>
                            <div>Users</div>
                            <ul>
                                <li><div><a href="/SystemUsers/Register">Add New System User</a></div></li>
                                <li><div><a href="/SystemUsers/Alluser">Search System Users</a></div></li>
                            </ul>
                        </li>

                    </ul>

                </div>

                <div class="col-md-9">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - ThetaOnlineStore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="//cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/iCheck/1.0.2/icheck.js"></script>
    <script src="https://github.com/fronteed/icheck/blob/1.x/icheck.min.js"></script>
   
    <script>
        $(function () {
            $("#menu").menu();
        });
    </script>
    @RenderSection("Scripts", required: false)


</body>
</html>
